{
  "name": "graphql-typescript-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate for GraphQL and TypeScript with TypeORM",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/ioredis": "^4.17.3",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@types/node-fetch": "^2.5.7",
    "@types/uuid": "^8.0.0",
    "@types/yup": "^0.29.3",
    "jest": "^26.2.2",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.4",
    "ts-node": "8.10.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "graphql-import": "^1.0.2",
    "graphql-request": "^1.5.2",
    "graphql-tools": "^6.0.15",
    "graphql-yoga": "^1.18.3",
    "ioredis": "^4.17.3",
    "node-fetch": "^2.6.1",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.2.25",
    "uuid": "^8.3.0",
    "yup": "^0.29.2"
  },
  "scripts": {
    "start": "NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "test": "NODE_ENV=testing jest --forceExit --detectOpenHandles"
  },
  "jest": {
    "globalSetup": "./src/tests/initSetup.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
