  "dependencies": {
    "apollo-server-express": "^2.19.1",
    "argon2": "^0.27.1",
    "class-validator": "^0.12.2",
    "connect-redis": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "express-session": "^1.17.1",
    "faker": "^5.1.0",
    "graphql": "^15.4.0",
    "graphql-upload": "^11.0.0",
    "ioredis": "^4.19.4",
    "nodemailer": "^6.4.17",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "tscpaths": "^0.0.9",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.29",
    "typeorm-seeding": "^1.6.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.16",
    "@types/cors": "^2.8.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/express-session": "^1.17.3",
    "@types/faker": "^5.1.5",
    "@types/graphql": "^14.5.0",
    "@types/ioredis": "^4.17.10",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --no-notify --respawn src/index.ts",
    "start": "NODE_ENV=production ts-node -r tsconfig-paths/register --transpile-only src/index.ts",
    "deploy": "docker-compose --env-file .env.production up --build -d --force-recreate --no-deps",
    "test:db": "NODE_ENV=test ts-node ./src/utils/test/setup/dbSetup.ts",
    "test": "NODE_ENV=test npm run test:db && jest --forceExit --detectOpenHandles",
    "seed:config": "NODE_ENV=test ts-node ./node_modules/typeorm-seeding/dist/cli.js config --connection test",
    "seed:run": "NODE_ENV=test ts-node ./node_modules/typeorm-seeding/dist/cli.js seed --connection test",
    "seed:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop --connection test",
    "seed:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync --connection test"
  }
}
